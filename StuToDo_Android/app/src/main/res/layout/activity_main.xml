    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/stutodo_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/welcomeStuToDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="Welcome to StuToDo"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/pingfangsc_semibold"/>

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/welcomeStuToDo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="where we let college students be great again."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:fontFamily="@font/pingfangscregular"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_grey"
        android:textColor="@color/white"
        android:text="Get Started"/>

</androidx.constraintlayout.widget.ConstraintLayout>