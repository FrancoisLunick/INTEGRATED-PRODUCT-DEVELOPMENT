<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/historyTask_circle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_baseline_check_circle_24"
        android:clickable="true"/>

    <TextView
        android:id="@+id/custom_item_historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Professor Doe Assignment Due"
        app:layout_constraintStart_toEndOf="@id/historyTask_circle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:textSize="20sp"
        android:fontFamily="@font/pingfangsc_semibold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/custom_item_historyNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="No additional text"
        app:layout_constraintStart_toEndOf="@id/historyTask_circle"
        app:layout_constraintTop_toBottomOf="@id/custom_item_historyTitle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:textSize="14sp"
        android:fontFamily="@font/pingfangscregular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/custom_item_historyDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Due in 3 days"
        app:layout_constraintStart_toEndOf="@id/historyTask_circle"
        app:layout_constraintTop_toBottomOf="@id/custom_item_historyNote"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:textSize="14sp"
        android:fontFamily="@font/pingfangscregular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/custom_item_historyDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/custom_item_historyDue"
        app:layout_constraintTop_toTopOf="@id/custom_item_historyDue"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/pingfangscregular"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="01/20/2022"
        android:textAlignment="textEnd"/>

</androidx.constraintlayout.widget.ConstraintLayout>